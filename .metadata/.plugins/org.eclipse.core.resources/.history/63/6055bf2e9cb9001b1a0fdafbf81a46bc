package com.qlks_hdv.mapper;


import com.qlks_hdv.entity.Roles;
import com.qlks_hdv.entity.User;
import com.qlks_hdv.request.CreateUserRequest;
import com.qlks_hdv.request.UpdateUserRequest;
import com.qlks_hdv.response.GetUserResponse;
import org.mapstruct.Mapper;
import org.mapstruct.Mapping;
import org.mapstruct.MappingTarget;

@Mapper(componentModel = "spring")
public interface UserMapper {


  @Mapping(target = "roles", source = "role")
  User mapToUser(CreateUserRequest createUserRequest, Roles role);

  User mapToUser(UpdateUserRequest updateUserRequest, @MappingTarget User user);

  GetUserResponse mapToGetUserResponse(User user);

}
